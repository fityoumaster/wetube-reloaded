extends base.pug

block content
    span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="text", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=09dc0cef51a0b88e8595") Continue with Github &rarr;
    hr
    div
        span Don't have an account? 
        a(href="/Join") Create one now &rarr;